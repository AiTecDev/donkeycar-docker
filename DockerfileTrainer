FROM nvcr.io/nvidia/l4t-pytorch:r32.6.1-pth1.9-py3

#Prevent Docker-Engine restart during apt-get upgrade
#RUN echo '* libraries/restart-without-asking boolean true' | sudo debconf-set-selections

# First install some packages with apt-get
RUN apt-get update -y && apt-get upgrade -y && apt-get install -y \
            libgstreamer1.0-0 \
            gstreamer1.0-plugins-base \
            gstreamer1.0-plugins-good \
            gstreamer1.0-plugins-bad \
            gstreamer1.0-plugins-ugly \
            gstreamer1.0-libav \
            gstreamer1.0-doc \
            gstreamer1.0-tools \
            libgstreamer1.0-dev \
            libgstreamer-plugins-base1.0-dev
RUN apt-get install -y libhdf5-serial-dev hdf5-tools libhdf5-dev zlib1g-dev zip libjpeg8-dev liblapack-dev libblas-dev gfortran
RUN apt-get install -y python3-dev python3-pip pkg-config
RUN apt-get install -y libxslt1-dev libxml2-dev libffi-dev libcurl4-openssl-dev libssl-dev libpng-dev libopenblas-dev
RUN apt-get install -y git
RUN apt-get install -y openmpi-doc openmpi-bin libopenmpi-dev

#RUN apt-get install -y libwebp-dev libtbb2 libtbb-dev  libgtk2.0-dev pkg-config libavcodec-dev libavformat-dev libswscale-dev libv4l-dev cmake
#RUN apt-get install -y autoconf autotools-dev build-essential gcc

# Install PyTorch Vision
RUN apt-get install libjpeg-dev zlib1g-dev libpython3-dev libavcodec-dev libavformat-dev libswscale-dev
RUN pip3 install torchvision
RUN pip3 install matplotlib tornado docopt pandas pylint pytest pytest-cov codecov  imgaug progress moviepy paho-mqtt PrettyTable pyfiglet mypy torchaudio pytorch-lightning numpy psutil kivy plotly tensorflow

ENV OPENCV_RELEASE_TAG 4.1.1
RUN git clone --depth 1 -b ${OPENCV_RELEASE_TAG}  https://github.com/opencv/opencv.git /var/local/git/opencv
RUN cd /var/local/git/opencv
RUN mkdir -p /var/local/git/opencv/build && \
    cd /var/local/git/opencv/build $$ && apt-get install -y cmake && \
    cmake -D CMAKE_INSTALL_PREFIX=/usr/local CMAKE_BUILD_TYPE=Release -D WITH_GSTREAMER=ON -D WITH_GSTREAMER_0_10=OFF -D WITH_CUDA=OFF -D WITH_TBB=ON -D WITH_LIBV4L=ON WITH_FFMPEG=ON -DOPENCV_GENERATE_PKGCONFIG=ON ..
RUN cd /var/local/git/opencv/build && \
    make install

#Next, you will need to install packages with pip
RUN pip3 install -U pip testresources setuptools
RUN pip3 install -U futures protobuf pybind11
RUN pip3 install -U cython numpy future mock h5py==2.10.0
RUN pip3 install -U keras_preprocessing keras_applications gast
RUN pip3 install -U grpcio absl-py py-cpuinfo psutil portpicker six requests astor
RUN pip3 install -U termcolor wrapt google-pasta scipy pandas gdown



RUN git clone https://github.com/autorope/donkeycar && cd donkeycar && git checkout dev && pip install -e .[nano]

ENV DISPLAY :0
WORKDIR /home/zamy/mycar

CMD ["python3", "/home/zamy/mycar/train.py", "--tub", "/home/zamy/mycar/data", "--model", "/home/zamy/mycar/models/mypilot.h5"]

