FROM nvcr.io/nvidia/l4t-ml:r32.4.4-py3

# setup environment
ENV DEBIAN_FRONTEND noninteractive
ENV QEMU_EXECVE 1

# First install some packages with apt-get
RUN apt-get update -y && apt-get install -y \
            libgstreamer1.0-0 \
            gstreamer1.0-plugins-base \
            gstreamer1.0-plugins-good \
            gstreamer1.0-plugins-bad \
            gstreamer1.0-plugins-ugly \
            gstreamer1.0-libav \
            gstreamer1.0-doc \
            gstreamer1.0-tools \
            libgstreamer1.0-dev \
            libgstreamer-plugins-base1.0-dev

RUN apt-get update -y && apt-get install -y  pkg-config \
 zlib1g-dev  libwebp-dev \
 libtbb2 libtbb-dev  \
 libgtk2.0-dev pkg-config libavcodec-dev libavformat-dev libswscale-dev libv4l-dev \
 libhdf5-serial-dev hdf5-tools libhdf5-dev zip libjpeg8-dev liblapack-dev libblas-dev gfortran

RUN apt-get install -y python3-dev python3-pip \
                    libxslt1-dev libxml2-dev libffi-dev libcurl4-openssl-dev libssl-dev libpng-dev libopenblas-dev \
                    libjpeg-dev zlib1g-dev libpython3-dev libavcodec-dev libavformat-dev libswscale-dev \
                    openmpi-doc openmpi-bin libopenmpi-dev \
                    autoconf autotools-dev build-essential gcc git nano cmake \
                    python-dev libsdl1.2-dev libsdl-image1.2-dev libsdl-mixer1.2-dev python-h5py \
                    libsdl-ttf2.0-dev libsdl1.2-dev libhdf5-dev libsmpeg-dev python-numpy subversion \
                    libportmidi-dev ffmpeg libswscale-dev libavformat-dev libavcodec-dev libfreetype6-dev

#Next, you will need to install packages with pip
RUN pip3 install -r ../requirements.txt

## Install donkey car
RUN git clone https://github.com/autorope/donkeycar /home/jetson
RUN cd /home/jetson \
        && git checkout master \
        && pip3 install -e .[nano] 

RUN echo "export LD_PRELOAD=/usr/lib/aarch64-linux-gnu/libgomp.so.1" >> ~/.bashrc

COPY entrypoint.sh /

# setup docker user
ARG user=jetson
ARG home=/home/jetson
USER ${user}
WORKDIR ${home}

ENTRYPOINT [ "/entrypoint.sh" ]
CMD [ "/bin/bash" ]
